    "typescript": "^2.7.2",
    "copy-webpack-plugin": "^4.5.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "css-loader": "^0.28.11",
    "electron": "^2.0.8",
    "electron-packager": "^12.0.2",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
