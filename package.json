{
  "name": "angular6-webpack4-sample-app",
  "version": "1.0.0",
  "description": "Angular 6 with Webpack 4 sample app",
  "scripts": {
    "start": "npm run serve",
    "serve": "npm run webpack-dev-server -- --env.env=dev --open --progress --profile  --watch --content-base src/",
    "build:prod": "npm run clean && npm run webpack -- --env.env=prod --progress --profile --bail",
    "build:dev": "npm run clean &&  npm run webpack -- --env.env=dev --progress --profile --bail",
    "webpack-dev-server": "webpack-dev-server",
    "webpack": "webpack",
    "clean": "rimraf dist"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/cdk": "^6.0.0",
    "@angular/common": "^6.0.0",
